@using HairSale.Models.HairItems;
@model IEnumerable<HairColor>

@if (Model.Count() <= 0)
{
    <div class="container">
        <h3>Пока нет добавленых цветов</h3>
        <button type="button" id="AddColorButton" class="btn btn-success">Добавить новый цвет</button>
    </div>
}
else
{
    <div class=" m-1">
        <button type="button" id="AddColorButton" class="btn btn-success">Добавить новый цвет</button>
    </div>
    <table>

    </table>
    <div class="row" id="HairsTableDiv">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Код цвета</th>
                    <th scope="col">Удалить</th>
                </tr>
            </thead>
            <tbody>
                @foreach (HairColor item in Model)
                {
                    <tr class="table-light">
                        <td scope="row">@item.Id</td>
                        <td scope="row">@item.Color</td>
                        <td><button class="fa fa-times" onclick="DeleteHairColor('@item.Id')"></button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}