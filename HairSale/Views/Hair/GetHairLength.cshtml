@using HairSale.Models.HairItems;
@model IEnumerable<HairLength>

@if (Model.Count() <= 0)
{
    <div class="container">
        <h3>Пока нет добавленых длинн волос</h3>
        <button type="button" id="AddLengthButton" class="btn btn-success">Добавить новую длину</button>
    </div>
}
else
{
    <div class=" m-1">
        <button type="button" id="AddLengthButton" class="btn btn-success">Добавить новую длину</button>
    </div>
    <div class="row" id="HairsTableDiv">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Длина</th>
                    <th scope="col">Удалить</th>
                </tr>
            </thead>
            <tbody>
                    @foreach (HairLength item in Model)
                    {
                        <tr class="table-light">
                            <td scope="row">@item.Id</td>
                            <td scope="row">@item.Length</td>                                                     
                            <td><button class="fa fa-times" onclick="DeleteHairLength('@item.Id')"></button></td>
                        </tr>
                    }
            </tbody>
        </table>
    </div>
}