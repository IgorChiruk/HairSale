<div class="container">
    <div class="btn-group btn-group-toggle m-2" data-toggle="buttons">
        <label class="btn btn-primary">
            <input type="radio" id="ShowAllOrders" onclick="GetAllOrders()" autocomplete="off" checked=""> Все
        </label>
        <label class="btn btn-primary active">
            <input type="radio" id="ShowWaitingOrders" onclick="GetWaitingOrders()" autocomplete="off"> В ожидании
        </label>
        <label class="btn btn-primary">
            <input type="radio" id="ShowCompleteOrders" onclick="GetCompleteOrders()" autocomplete="off"> Выполненые
        </label>
    </div>
    <table class="table table-hover" id="OrderTable">
        <thead>
            <tr>
                <th scope="col">Email</th>
                <th scope="col">Телефон</th>
                <th scope="col">Дата</th>
                <th scope="col">Статус</th>
                <th scope="col">Кол-во видов</th>
                <th scope="col">Операции</th>
            </tr>
        </thead>
    </table>
</div>