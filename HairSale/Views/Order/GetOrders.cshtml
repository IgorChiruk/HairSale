@using HairSale.Models.Orders
@model IEnumerable<Order>
        <tbody>
            @if (Model.Count() <= 0)
            {
                <tr><td colspan="6" align="center"><strong>Нет ни одного заказа</strong></td></tr>
            }
            else
            {
                foreach (Order order in Model)
                {
                    <tr class="table-light" onclick="ViewOrder('@order.Id')">
                        <td scope="row">@order.UserEmail</td>
                        <td scope="row">@order.UserPhone</td>
                        <td scope="row">@order.Date</td>
                        <td scope="row">@order.OrderStatus</td>
                        <td scope="row">@order.OrderItems.Count()</td>
                        <td><button class="btn btn-success" onclick="CompleteOrder('@order.Id',event)">Завершить</button></td>
                    </tr>
                }
            }
        </tbody>